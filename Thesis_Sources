@Misc{SSW:Perera,
  Title                    = {City Data Fusion: Sensor Data Fusion in the Internet of Things},

  Author                   = {Wang, Meisong and Perera, Charith and Jayaraman, Prem Prakash and Zhang, Miranda and Strazdins, Peter and Ranjan, Rajiv},
  Year                     = {2015},

  Abstract                 = {This article introduces the concept of IoT and presents in detail ten different parameters that govern their sensor data fusion evaluation framework. The main goal is to examine and survey different sensor data fusion research efforts based on our evaluation framework. The ten parameters are: Middleware Architecture Type, Context-awareness, Semantic Interaction, Dynamic Configuration, Fusion Complexity, Actuation Management, Type of Processing, Cross Domain Portability, Implementation and Performance Evaluation. It presents a number of 'state of the art' examples of Sensor Data Fusion. Table 1: Taxonomy of Sensor Data Fusion Research Efforts contains a taxonomy of a couple dozen researches.},
  Journal                  = {arXiv preprint arXiv:1506.09118},
  Owner                    = {Ivo},
