@InProceedings{SSW:deMel,
  Title                    = {Semantically enriched data for effective sensor data fusion},
  Author                   = {De Mel, Geeth and Pham, Tien and Damarla, Thyagaraju and Vasconcelos, Wamberto and Norman, Tim},
