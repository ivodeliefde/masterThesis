@InProceedings{SSW:Janowicz3,
  Title                    = {{Towards meaningful uris for linked sensor data}},
  Author                   = {Janowicz, Krzysztof and Br{\"o}ring, Arne and Stasch, Christoph and Everding, Thomas},
  Booktitle                = {Towards digital earth: Search, discover and share geospatial data. Workshop at Future Internet Symposium},
  Year                     = {2010},

  Abstract                 = {Sensor data is stored and published using OGC’s Observation
& Measurement specifications as underlying data model. With the
advent of volunteered geographic information and the Semantic Sensor
Web, work on an ontological, i.e. conceptual, model gains importance
within the Sensor Web Enablement community. In contrast to a data
model, an ontological approach abstracts from implementation details
by focusing on modeling the real world from the perspective of a particular
domain or application and, hence, restricts the interpretation of the
used terminology towards their intended meaning. The shift to linked
sensor data, however, requires yet another perspective. Two challenges
have to be addressed, (i) how to refer to changing and frequently updated
data sets such as stored in Sensor Observation Services using Uniform
Resource Identifiers, and (ii) how to establish meaningful links between
those data sets, i.e., observations, sensors, features of interest, observed
properties, and further participants in the measurement process. In this
short paper we focus on the problem of assigning meaningful URIs.},
  Owner                    = {Ivo},
  Review                   = {This paper addresses two problems: (i) how to refer to changing and frequently updated data sets such as stored in Sensor Observation Services using Uniform Resource Identifiers, and (ii) how to establish meaningful links between those data sets, i.e., observations, sensors, features of interest, observed properties, and further participants in the measurement process. It focuses on the problem of assigning meaningful URIs.

Observation is the act in which sensors perceive stimuli and translate them into another, often digital, representation. Typically, we are not interested in these stimuli but in what they tell us about the properties of particular real word entities - the features of interest. However, it is difficult to determine which features to link to. Therefore, links to different kinds of features can be made. Also, this paper suggests a method of providing a ' vague' region with a certain confidence level.

Meaningful URIs, links, and vocabularies are the essential building blocks of Linked (Open) Data, while the machine-readable RDF is rather an enabling encoding that provides some basic reasoning support in addition. The main O&M components associated with an observation and offered by
an SOS are features of interest, sensors (procedures), and observed properties. The URIs are assigned to these components by appending the component type to the URI identifying the authority.},
  Timestamp                = {2015.11.27}
}

@Article{SSW:Janowicz,
  Title                    = {{A RESTful Proxy and Data Model for Linked Sensor Data}},
  Author                   = {Janowicz, Krzysztof and Broring, Arne and Stasch, Christoph and Schad, Sven and Everding, Thomas and Llaves, Alejandro},
  Journal                  = {International Journal of Digital Earth},
  Year                     = {2013},
  Number                   = {3},
  Pages                    = {233-254},
  Volume                   = {6},

  Abstract                 = {The vision of a Digital Earth calls for more dynamic information systems,
new sources of information, and stronger capabilities for their integration.
Sensor networks have been identified as a major information source for
the Digital Earth, while Semantic Web technologies have been proposed to
facilitate integration.. So far, sensor data is stored and published using the
Observations & Measurements standard of the Open Geospatial Consortium
(OGC) as data model. With the advent of Volunteered Geographic Information
and the Semantic SensorWeb, work on an ontological model gained importance
within Sensor Web Enablement (SWE). In contrast to data models,
an ontological approach abstracts from implementation details by focusing
on modeling the physical world from the perspective of a particular domain.
Ontologies restrict the interpretation of vocabularies towards their intended
meaning. The ongoing paradigm shift to Linked Sensor Data complements
this attempt. Two questions have to be addressed: (i) how to refer to changing
and frequently updated data sets using Uniform Resource Identifiers, and
(ii) how to establish meaningful links between those data sets, i.e., observations,
sensors, features of interest, and observed properties? In this paper, we
present a Linked Data model and a RESTful proxy for OGC’s Sensor Observation
Service to improve integration and inter-linkage of observation data
for the Digital Earth},
  Owner                    = {Ivo},
  Review                   = {This article describes the process of linking sensor data to the semantic web. It introduced a Linked Data model to combine OGC’s Sensor Observation Service with the Linked Data cloud. This takes shape as a RESTful server. There are detailed decsriptions of how to create such a RESTful proxy.

The implementation of this paper takes a SOS service and builts a semantic 'facade' in front of it. This is contrary to the thesis idea of creating a way of connecting SOS services to the semantic web via a third-party service that is seperate from the SOS services. "Based on the scheme introduced
in section 3.2, the RESTful proxy extracts the user’s query from the URI, encodes it into valid SOS queries, fetches the results from the underlying SOS, and converts them (after according content negotiation) to an RDF representation aligned with the Linked Data model"

While the OGC has standardized Web Services which follow a state-full request-response pattern and are designed based on the publish-find-bind paradigm of Service-Oriented Architectures (SOA) (Mazzetti et al., 2009), Linked Data explicitly aims at breaking up such data silos. Instead, it proposes a Resource-Oriented Architecture (ROA) which is focused on distributed capabilities and services.

Both O&M and SSN are not sufficient to address the needs of Linked Data. While O&M supports unique identifiers, it currently does neither prescribe the use of HTTP URI’s, the persistence of identifiers, nor clear and flexible linking strategies between resources.

There is hardly any context-free sensor data. In most cases raw data will be of limited value. The selection, processing, and publication of data using URIs already involves making certain decisions, e.g., about the features of interest.

So far, links expressed as RDF predicates do not support a temporal scoping.},
  Timestamp                = {2015.11.10}
}

@Article{SSW:Janowicz2,
  Title                    = {{Semantic enablement for spatial data infrastructures}},
  Author                   = {Janowicz, Krzysztof and Schade, Sven and Br{\"o}ring, Arne and Ke{\ss}ler, Carsten and Mau{\'e}, Patrick and Stasch, Christoph},
