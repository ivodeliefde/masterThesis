@Article{SW:Hu,
  Title                    = {{An Observation Capability Metadata Model for EO Sensor Discovery in Sensor Web Enablement Environments}},
  Author                   = {Hu, Chuli and Guan, Qingfeng and Chen, Nengcheng and Li, Jia and Zhong, Xiang and Han, Yongfei},
