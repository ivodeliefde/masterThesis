@InProceedings{IOT:Zarko,
  Title                    = {Real Time Analysis of Sensor Data for the Internet of Things by means of Clustering and Event Processing},
  Author                   = {{\v{Z}}arko, Ivana Podnar and Hromic, Hugo and Phuoc, Danh Le and Serrano, Martin and Antonic, Aleksandar and Hayes, Conor and Decker, Stefan},
  Booktitle                = {Proc. of the IEEE International Conference of Communications (ICC2015)},
  Year                     = {2015},
  Organization             = {Hrvatska znanstvena bibliografija i MZOS-Svibor},

  Abstract                 = {This article presents an event and clustering analytics server that acts as an interface for novel analytical IoT services. The approach presented in this paper also demonstrates how sensor data acquired from mobile devices can be integrated within IoT platforms to enable analytics on data streams. It is based on the OpenIoT platform. The use case for evaluating the proposed solution is a mobile crowd-sensing application for air quality monitoring in a smart city environment, where users provide data streams with wearable sensors. In the framework of the OpenIoT project, the Intelligent OpenIoT server is the gateway for the Extended Global Sensor Networks (X-GSN) middleware. Working on annotated RDF data, Linked Sensor Middleware (LSM-Light) provides even more sophisticated means to filter and aggregate data. The X-GSN middleware can either push data to LSM-light or LSM-ligth can periodically pull data. 

Often individual sensor readings are not relevant but instead an aggregated value is required. The three levels (physical, virtual (X-GSN) and semantic (LSM) feature different aggregation capabilities.

The data was split into 2 hours non-overlapping time windows. They used the coordinates to spatially group the data by means of the k-means clustering algorithm with predefined cluster centroids. 

The analytics they perform as well as the middleware architecture might be relevant for my thesis. This article takes IoT sensors and maps them as RDF. Pretty much like my idea, but for openIoT instead of SWE (see figure 1) and not taking vector features into consideration.},
  Owner                    = {Ivo},
  Timestamp                = {2015.11.10}
}

@Book{LD:Auer,
  Title                    = {Linkedgeodata: Adding a spatial dimension to the web of data},
  Author                   = {Auer, S{\"o}ren and Lehmann, Jens and Hellmann, Sebastian},
  Publisher                = {Springer},
  Year                     = {2009},

  Abstract                 = {This article shows how the collaboratively collected OpenStreetMap data can be transformed and represented adhering to the RDF data model, how this data can be interlinked with other spatial data sets and how it can be made accessible for machines according to the linked data paradigm.

This is similar to my thesis research: using OSM data as RDF to interlink spatial datasets on the semantic web. However, I would like to extend this with sensor data: linking sensor data sets together based on OSM data as RDF.

Mapping OSM into RDF resulted in 2 billion triples(!) that are difficult to handle by existing triple stores. For example, lat/long coordinates can be stored far more efficiently with by relational database indexing techniques. As a result of these considerations, the article proposes a mixed approach in which part of the data is stored in relations and another part is stored according to the RDF data model. They also identify a number of considerations which improved the performance. One of which was an optimized import script which imports the OSM XML 3-5 times faster thatn the Osmosis tool.

Part of the ontology is deriveed from the relational representation (see figure 3 page 6). A major source of strucutre, however, are the OSM tags i.e. attribute-value annotations to nodes, ways and relations.

The article mentions how LinkedGeoData has been matched to DBPedia (first restricted to objects with latitude, longitude properties, but furter research should extend this).

Related work this article mentions: There is a large body of work dedicated to converting relational databases to RDF and OWL. The W3C RDB2RDF incubator group, which we are participating in, has the aim to classify and standardize such approaches.},
  Owner                    = {Ivo},
  Timestamp                = {2015.11.10}
}

